    <title>Auction-Prop | Property Detail</title>

</head>


<body class="page-sub-page page-listing page-grid page-search-results" id="page-top">
    <!-- Page Content -->
    <div id="page-content">
        <!-- Breadcrumb -->
        <div class="container">
            <ol class="breadcrumb">
                <li><a href="#">Property</a></li>
                <li class="active">@Html.DisplayFor(model => model.Address)</li>
            </ol>
        </div>
        <!-- end Breadcrumb -->
        <div class="container">
            <div class="row">
                <!-- Property Detail Content -->
                <div class="col-md-9 col-sm-9">
                    <section id="property-detail">
                        <header class="property-title">
                            <h1>@Html.DisplayFor(model => model.Title)</h1>
                            <h2>@Html.DisplayFor(model => model.Address)</h2>
                            <figure>@Html.DisplayFor(model => model.Province), @Html.DisplayFor(model => model.City)</figure>
                            <span class="actions">
                                <!--<a href="#" class="fa fa-print"></a>-->
                                <a href="#" class="bookmark" data-bookmark-state="empty"><span class="title-add">Add to bookmark</span><span class="title-added">Added</span></a>
                            </span>
                        </header>
                        @{
                            ICollection<PropertyPhoto> photos = Model.PropertyPhotos;
                            foreach (PropertyPhoto p in photos)
                            {
                                <section id="property-gallery">
                                    <div class="owl-carousel property-carousel">
                                        <div class="property-slide">
                                            <a href=@p.PropertyPhotoPath class="image-popup">
                                                <div class="overlay"><h3>@p.Title</h3></div>
                                                <img alt="" src=@p.PropertyPhotoPath>
                                            </a>
                                        </div><!-- /.property-slide -->

                                    </div><!-- /.property-carousel -->
                                </section>

                            }


                        }

                    </section>
                    <div class="row">
                        <div class="col-md-4 col-sm-12">
                            <section id="quick-summary" class="clearfix">
                                <header><h2>Quick Summary</h2></header>
                                <dl>
                                    <dt>Location:</dt>
                                    <dd> @Html.DisplayFor(model => model.City),  @Html.DisplayFor(model => model.Province)</dd>

                                    @if (Model.Type == "Auction")
                                    {
                                        try
                                        {
                                            <dt>Auction Date:</dt>
                                            <dd>@Model.Auction.StartTime</dd>
                                            <dt>Property Value.</dt>
                                            <dd>@Model.PrpertyValue</dd>

                                        }
                                        catch
                                        {
                                            <dd>This Property is not yet scheduled for a auction.</dd>

                                            <dt>Property Value.</dt>
                                            <dd>@Model.PrpertyValue</dd>
                                        }
                                    }
                                    else
                                    {
                                        <dt>Property Value.</dt>
                                        <dd>@Model.PrpertyValue</dd>
                                    }

                                    <dt>Property Type:</dt>
                                    <dd>@Model.Type</dd>
                                    <dt>Status:</dt>
                                    <dd>@Model.Status</dd>
                                    <dt>Building Area:</dt>
                                    <dd>@Model.BuildingArea m<sup>2</sup></dd>
                                    <dt>Terrace Area:</dt>
                                    <dd>@Model.TerraceArea m<sup>2</sup></dd>
                                    <dt>Beds:</dt>
                                    <dd>@Model.BedRooms</dd>
                                    <dt>Baths:</dt>
                                    <dd>@Model.BathRooms</dd>
                                    <dt>Garages:</dt>
                                    <dd>@Model.Garages</dd>
                                </dl>
                            </section><!-- /#quick-summary -->
                        </div><!-- /.col-md-4 -->
                        <div class="col-md-8 col-sm-12">
                            <section id="description">
                                <header><h2>Property Description</h2></header>
                                <p>
                                    @Model.Description
                                </p>

                            </section><!-- /#description -->
                            <section id="property-features">
                                <header><h2>Property Extras</h2></header>
                                <ul class="list-unstyled property-features-list">
                                    @if (Model.FireplacePit)
                                    {
                                        <li>Fireplace</li>

                                    }
                                    @if (Model.A_C)
                                    {
                                        <li>A/C</li>

                                    }
                                    @if (Model.PetsAllowed)
                                    {
                                        <li>Pets Allowed</li>

                                    }
                                    @if (Model.Garden)
                                    {
                                        <li>Garden</li>

                                    }
                                    @if (Model.CableTV)
                                    {
                                        <li>Cable TV</li>

                                    }
                                    @if (Model.Terrace)
                                    {
                                        <li>Terrace</li>

                                    }
                                    @if (Model.wi_fi)
                                    {
                                        <li>Wi-Fi</li>

                                    }
                                    @if (Model.Fibre)
                                    {
                                        <li>fibre</li>

                                    }
                                    @if (Model.Pool)
                                    {
                                        <li>Pool</li>

                                    }
                                    @if (Model.Balcony)
                                    {
                                        <li>Balcny</li>

                                    }
                                    @if (Model.Parquet)
                                    {
                                        <li>Parquet</li>

                                    }
                                    @if (Model.Beach)
                                    {
                                        <li>Beach</li>

                                    }
                                    @if (Model.Gerage)
                                    {
                                        <li>Gerage</li>

                                    }
                                    @if (Model.RoofTarrace)
                                    {
                                        <li>Roof Tarrace</li>

                                    }
                                    @if (Model.Sauna)
                                    {
                                        <li>Sauna</li>

                                    }
                                    @if (Model.OutdoorKitchen)
                                    {
                                        <li>Outdoor kitchen</li>

                                    }
                                    @if (Model.SunRoom)
                                    {
                                        <li>Sun room</li>

                                    }
                                    @if (Model.ConcreteFlooring)
                                    {
                                        <li>Concrete floring</li>

                                    }
                                    @if (Model.WoodFloring)
                                    {
                                        <li>Wood floring</li>

                                    }
                                    @if (Model.TennisCourts)
                                    {
                                        <li>Tennis Courts</li>

                                    }

                                </ul>
                            </section><!-- /#property-features -->
                            <section id="floor-plans">
                                <div class="floor-plans">
                                    <header><h2>Floor Plans</h2></header>
                                    <a href="@Model.PlansPath" class="image-popup"><img alt="" src="@Model.PlansPath"></a>
                                </div>
                            </section><!-- /#floor-plans -->
