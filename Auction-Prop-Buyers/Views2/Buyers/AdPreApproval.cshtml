@model Auction_Prop_Buyers.Models.DisplayMadels.BankApproval

@{
    ViewBag.Title = "AdPreApproval";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AdPreApproval</h2>

<form action="" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Please Submit Your Pre Approval Documents</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })



        <div class="form-group">
            @Html.LabelFor(model => model.ApprovalPath, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ApprovalPath, new { @class = "form-control", Type = "file" })
                @Html.ValidationMessageFor(model => model.ApprovalPath, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
    </form>
