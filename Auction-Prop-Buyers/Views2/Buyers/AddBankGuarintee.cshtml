@model Auction_Prop_Buyers.Models.DisplayMadels.GuarinteeViewModel

@{
    ViewBag.Title = "AddBankGuarintee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Submit Your Bank Guarantees</h2>

<form action="" method="post" enctype="multipart/form-data">
    
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>GuarinteeViewModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       
        <p>Upload Your Pre Approval Documents</p>
        <div class="form-group">
            @Html.LabelFor(model => model.GuarinteePath, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.GuarinteePath, new { @class = "form-control" , Type="file" })
                @Html.ValidationMessageFor(model => model.GuarinteePath, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-b" />
            </div>
        </div>
    </div>
    </form>
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
